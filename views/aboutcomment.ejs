<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>本部电影的所有评论</title>
    <%- include common %>
</head>

<body>
    <%-  include("header",{title:"aboutcomment"})  %>
    <div class="container">
        <h3 class="text-info">本部电影的所有评论</h3>
        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-8">
                <% if(result.length > 1){ %>
                <% result.forEach((item,index)=>{ %>
                <h5 class="text-info">用户<%- item.username %> : <a
                        href="/details/aboutcomment?mtitle=<%- item.mtitle %>">《<%- item.mtitle %>》</a>
                    <p class="pull-right"><%- item.time %></p>
                </h5>
                <div class="thumbnail">
                    <h5 class="text-primary">标题：<%- item.title %> </h5>
                    <h6 class="text-danger">内容：<%- item.content %></h6>
                </div>
                <% }) %>
                <% }else{ %>
                <h3 class="text-danger"> 暂无评论</h3>
                <% } %>
            </div>
            <div class="col-md-2"></div>
        </div>
    </div>

    <%-  include footer %>
</body>

</html>